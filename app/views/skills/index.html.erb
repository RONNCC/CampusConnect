<div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
<center><h1>Listing Skills</h1></center>

 <ul class="dropdown-menu" aria-labelledby="dLabel">
    <li><a href="#">Most Recent</a></li>
    <li><a href="#">Academic</a></li>
    <li><a href="#">Living</a></li>
    <li><a href="#">Food</a></li>
  </ul>

<table class="table">
  <thead>
    <tr>
      <th><p>Skill</p></th>
      <th><p>Description</p></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.skill %></td>
        <td><%= skill.description %></td>
        <td><%= link_to 'View Skill', skill, class: "btn btn-success"  %></td>
        <td><%= link_to 'Edit Skill', edit_skill_path(skill), class: "btn btn-warning"  %></td>
        <td><%= link_to 'Delete Skill', skill, class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path, class: "btn btn-info"  %>
</div>