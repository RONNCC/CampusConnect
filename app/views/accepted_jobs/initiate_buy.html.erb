<div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
<center>

<h1>Here are the current job offerings</h1>
<br>
<table class="table">
  <thead>
    <tr>
      <!-- <th>Buyer</th> -->
      <th><p>Skill Offered</p></th>
      <th><p>Description</p></th>
      <th><p>Price</p></th>
      <th><p>Quantity</p></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ny_asking_prices.each do |ap| %>
      <tr>
        <!-- <td><%# job_posting.buyer_id %></td> -->
        <td><p><%= ap.skill.skill %></p></td>
        <td><p><%= ap.skill.description %></p></td>
        <td><p><%= "$" + ap.price %></p></td>
        <td><p><%= ap.quantity %></p></td>
        <td><%= link_to 'Select Job Offering', make_accepted_job_path(@jp,ap), class: "btn btn-primary btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>
<br>
<br>
<br>
<br>

<i>
<h4><b>Your Needed Job</b></h4>
<p><%= "Name: " + (@jp.job_name === "" ? "No Name" : @jp.job_name) %></p><br>
<p><%= "Description: " + (@jp.description === "" ? "No description" : @jp.description) %></p><br>
<p><%= "Skills Required: " + (@jp.skills_required === "" ? "No skills required" : @jp.skills_required) %></p><br>
<p><%= "Estimated Time Required: " + (@jp.estimated_time === "" ? "No Estimated Time Required" : @jp.estimated_time) %></p><br>
</i>

</div>