<div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            
<center>
<p id="notice"><%= notice %></p>
<% if logged_in? %>

<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#yourjob" aria-controls="home" role="tab" data-toggle="tab"><p><b>Your Job Postings</b></p></a></li>
    <li role="presentation"><a href="#otherjob" aria-controls="profile" role="tab" data-toggle="tab"><p><b>Other Job Postings</b></p></a></li>
  </ul>
</center>
    <div class="dropdown">
  <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dLabel">
    <li><a href="#">Most Recent</a></li>
    <li><a href="#">Highest Price</a></li>
    <li><a href="#">Lowest Price</a></li>
    <li><a href="#">Rating</a></li>
  </ul>
</div>
<center>
  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="yourjob">
     <table class="table">
    <thead>
      <tr>
        <!-- <th>Buyer</th> -->
        <th><p>Job name</p></th>
        <th><p>Description</p></th>
        <th><p>Skills required</p></th>
        <th><p>Estimated time</p></th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @your_jp.each do |job_posting| %>
        <tr>
          <!-- <td><%# job_posting.buyer_id %></td> -->
          <td><p><%= job_posting.job_name %></p></td>
          <td><p><%= job_posting.description %></p></td>
          <td><p><%= job_posting.skills_required %></p></td>
          <td><p><%= job_posting.estimated_time %></p></td>
          <td><%= link_to 'Initiate Job', initiate_job_buy_path(job_posting),class: "btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_job_posting_path(job_posting), class: "btn btn-warning" %></td>
          <td><%= link_to 'Delete', job_posting, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this job posting?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    </div>
    <div role="tabpanel" class="tab-pane" id="otherjob">
     <table class="table">
    <thead>
      <tr>
         <!-- <th>Buyer</th> -->
        <th><p>Job name</p></th>
        <th><p>Description</p></th>
        <th><p>Skills required</p></th>
        <th><p>Estimated time</p></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @other_jp.each do |job_posting| %>
        <tr>
          <!-- <td><%# job_posting.buyer_id %></td> -->
          <!-- <td><%# job_posting.buyer_id %></td> -->
          <td><p><%= job_posting.job_name %></p></td>
          <td><p><%= job_posting.description %></p></td>
          <td><p><%= job_posting.skills_required %></p></td>
          <td><p><%= job_posting.estimated_time %></p></td>
          <td><%= link_to 'View Job Posting', job_posting, class: "btn btn-success" %></td>
          <% if current_user.role == "admin" %>
          <td><%= link_to 'Edit', edit_job_posting_path(job_posting), class: "btn btn-warning" %></td>
          <td><%= link_to 'Delete', job_posting, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this job posting?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>



    </div>
    
  </div>

</div>

 

<% else %>
  <h1>Job Postings</h1>

  <table class="table">
    <thead>
      <tr>
        <!-- <th>Buyer</th> -->
        <th><p>Job name</p></th>
        <th><p>Description</p></th>
        <th><p>Skills required</p></th>
        <th><p>Estimated time</p></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @all_jp.each do |job_posting| %>
        <tr>
          <!-- <td><%# job_posting.buyer_id %></td> -->
          <td><p><%= job_posting.job_name %></p></td>
          <td><p><%= job_posting.description %></p></td>
          <td><p><%= job_posting.skills_required %></p></td>
          <td><p><%= job_posting.estimated_time %></p></td>
          <td><%= link_to 'View Job Posting', job_posting, class: "btn btn-success" %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
<% if logged_in? %> <br><br>
  <%= link_to 'Add New Job posting', new_job_posting_path, class: 'btn btn-link' %>
<% end %>
</center>
 </div>
</div>
