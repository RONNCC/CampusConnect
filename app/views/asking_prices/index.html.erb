<center>
<p id="notice"><%= notice %></p>

<h1>Listing Asking Prices</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Sell</th> -->
      <!-- <th>Skill</th> -->
      <th>Skill</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asking_prices.each do |asking_price| %>
      <tr>
        <!-- <td><%# asking_price.seller_id %></td> -->
        <!-- <td><%# asking_price.skill_id %></td> -->
        <td><%= asking_price.skill.skill %></td>
        <td><%= asking_price.skill.description %></td>
        <td><%= "$" + asking_price.price.to_s %></td>
        <td><%= asking_price.quantity %></td>
        <td><%= link_to 'Show', asking_price %></td>
        <td><%= link_to 'Edit', edit_asking_price_path(asking_price) %></td>
        <td><%= link_to 'Destroy', asking_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asking price', new_asking_price_path %>
</center